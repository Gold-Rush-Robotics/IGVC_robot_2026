<?xml version="1.0" encoding="UTF-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name='igvc_test_robot'>
    <xacro:include filename="$(find igvc_test_description)/urdf/parts/test_robot_body.urdf.xacro" />
    <xacro:include filename="$(find igvc_test_description)/urdf/control/ros2_control_info.urdf.xacro" />
    <xacro:include filename="$(find igvc_test_description)/urdf/parts/zed_camera_x.urdf.xacro" />
    
    <xacro:arg name="hardware_interface" default="IsaacDriveHardware" />
    <xacro:robot_body />

    <xacro:zed_camera_x parent="chassis_link" prefix="left">
        <origin xyz="0.2 -0.1 ${3.14/2}" rpy="0 0 0"/>
    </xacro:zed_camera_x>

    <xacro:zed_camera_x parent="chassis_link" prefix="front">
        <origin xyz="0.2 0 0" rpy="0 0 0"/>
    </xacro:zed_camera_x>

    <xacro:zed_camera_x parent="chassis_link" prefix="right">
        <origin xyz="0.2 0.1 -${3.14/2}" rpy="0 0 0"/>
    </xacro:zed_camera_x>


</robot>